#!/usr/bin/env bash

set -ex

if [[ $1 =~ js-yaml ]]; then
  cd /work/js-yaml/
  npm install .
  npm pack > pack.filename
  cd /work/build/
  npm install --no-save "/work/js-yaml/$(cat /work/js-yaml/pack.filename)"
  vcs-info js-yaml
else
  cd /work/js/
  npm install .
  npm run build
  npm pack > pack.filename
  cd /work/build/
  npm install --no-save "/work/js/$(cat /work/js/pack.filename)"
  vcs-info js
fi

set-perms
